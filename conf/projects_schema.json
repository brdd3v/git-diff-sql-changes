{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "projects": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "check": {
              "type": "boolean"
            },
            "url": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "check",
            "url"
          ]
        }
      ]
    }
  },
  "required": [
    "projects"
  ]
}
